{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "arrowFunctions": true,
    "modules": true,
    "jsx": true,
    "classes": true
  },
  "plugins": [
    "react"
  ],
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "globals": {
    "$": false
  },
  "rules": {
    "block-scoped-var": 2,
    "camelcase": 0,
    "comma-style": 2,
    "curly": [2, "all"],
    "dot-notation": 0,
    "eqeqeq": [0, "allow-null"],  // off
    "guard-for-in": 2,
    "key-spacing": 0,
    "new-cap": 0,
    "no-bitwise": 2,
    "no-caller": 2,
    "no-cond-assign": [0, "except-parens"],  // off
    "no-debugger": 0,  // off
    "no-empty": 0,  // off
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-parens": 0,
    "no-irregular-whitespace": 0,  // off
    "no-iterator": 2,
    "no-loop-func": 0,  // off
    "no-multi-spaces": 0,
    "no-multi-str": 0,
    "no-mixed-spaces-and-tabs": 0,
    "no-new": 2,
    "no-plusplus": 0,
    "no-proto": 2,
    "no-script-url": 2,
    "no-sequences": 2,
    "no-shadow": 2,
    "no-undef": 2,
    "no-underscore-dangle": 0,
    "no-unused-vars": 2,
    "no-use-before-define": 2,
    "no-with": 2,
    "quotes": [0, "single"],  // off
    "jsx-quotes": 2,
    "react/display-name": 0,
    "react/jsx-boolean-value": 0,
    "react/jsx-no-undef": 1,
    "react/jsx-sort-props": 0,
    "react/jsx-sort-prop-types": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/no-did-mount-set-state": 2,
    "react/no-did-update-set-state": 2,
    "react/no-multi-comp": [2, { "ignoreStateless": true }],
    "react/no-unknown-property": 2,
    "react/prop-types": [2, {
        "ignore": "children"
    }],
    "react/react-in-jsx-scope": 2,
    "react/self-closing-comp": 2,
    "react/sort-comp": [2, {
      "order": [
        "/^constructor$/",
        "lifecycle",
        "everything-else",
        "render"
      ]
    }],
    "react/wrap-multilines": 2,
    "semi": [2, "always"],
    "space-after-keywords": [2, "always"],
    "strict": 2,
    "valid-typeof": 2,
    "wrap-iife": [2, "any"]
  }
}
