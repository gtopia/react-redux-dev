{
    "presets": [ ["es2015", { "modules": false }], "react", "stage-0" ],
    "env": {
         "development": {
            "plugins": [
                [
                    "react-transform",
                    {
                        "transforms": [
                            {
                                "transform": "react-transform-hmr",
                                "imports": ["react"],
                                "locals": ["module"]
                            },
                            {
                                "transform": "react-transform-catch-errors",
                                "imports": ["react", "redbox-react"]
                            }
                        ]
                    }
                ]
            ]
        },
        "production": {
            "plugins": [
                [
                    "react-transform",
                    {
                        "transforms": [
                            {
                                "transform": "react-transform-catch-errors",
                                "imports": ["react", "redbox-react"]
                            }
                        ]
                    }
                ]
            ]
        }
    }
}
